[flake8]
max-line-length = 100
max-physical-line-length = 500
max-lines = 500
ignore = 
    # Whitespace before ':' (conflicts with black)
    E203,
    # Line break before binary operator (conflicts with black)
    W503,
    # Multiple statements on one line (def) - Protocol methods
    E704,
    # Line too long (covered by black)
    E501
exclude = 
    venv,
    build,
    dist,
    .git,
    __pycache__,
    *.egg-info,
    .pytest_cache
